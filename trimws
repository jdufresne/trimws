#!/bin/bash

set -e
set -u
set -x

find . \
     -name .git -prune -o \
     -name .hg -prune -o \
     -not -name \*.gif \
     -not -name \*.mo \
     -not -name \*.png \
     -not -name \*.xls \
     -not -name \*.xlsx \
     -type f \
     -exec emacs -Q -batch {} -eval "(require 'whitespace)" -eval "(let ((whitespace-style '(empty trailing))) (whitespace-cleanup))" -f save-buffer \;
